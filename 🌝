<script>
  // Initialize or load saved data
  let total = parseInt(localStorage.getItem('totalBots')) || 1000000;
  let daily = parseInt(localStorage.getItem('dailyBots')) || 0;
  let countries = parseInt(localStorage.getItem('countries')) || 25;
  let lastCountryUpdate = localStorage.getItem('lastCountryUpdate') || Date.now();

  const totalEl = document.getElementById("total");
  const dailyEl = document.getElementById("daily");
  const countryEl = document.getElementById("countries");
  const countryListEl = document.getElementById("countryList");

  const countryNames = [
    "Sri Lanka", "India", "Pakistan", "Bangladesh", "Nepal", "Thailand",
    "Indonesia", "Philippines", "Malaysia", "Singapore", "UAE", "Qatar",
    "Oman", "Saudi Arabia", "Kuwait", "Egypt", "Kenya", "Nigeria",
    "South Africa", "Turkey", "Russia", "UK", "Germany", "USA", "Canada"
  ];

  // Auto increase all counters
  setInterval(() => {
    total++;
    daily++;
    localStorage.setItem('totalBots', total);
    localStorage.setItem('dailyBots', daily);
    totalEl.textContent = total.toLocaleString();
    dailyEl.textContent = daily.toLocaleString();
  }, 1000);

  // Country auto increment every 2 days
  const now = Date.now();
  if (now - lastCountryUpdate > 2 * 24 * 60 * 60 * 1000) {
    countries++;
    if (countries > 50) countries = 50;
    localStorage.setItem('countries', countries);
    localStorage.setItem('lastCountryUpdate', now);
  }

  countryEl.textContent = countries;
  countryListEl.innerHTML = countryNames.slice(0, countries).join(" â€¢ ");

  totalEl.textContent = total.toLocaleString();
  dailyEl.textContent = daily.toLocaleString();
</script>
